/* pages/manager/statistics/statistics.wxss */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-around;
} 
.head{
  width: 700rpx;
	height: 180rpx;
	color: rgba(24, 144, 255, 1);
	background-color: rgba(64, 169, 255, 1);
	border-radius: 16rpx;
	font-size: 32rpx;
	line-height: 150%;
	box-shadow: 0rpx 12rpx 38rpx 0rpx rgba(64, 169, 255, 0.3857142857142857);
  text-align: center;
  margin-top:20rpx ;
}
.row{
  display: flex;
  flex-direction: row;
}
.col{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.box{
  width:33%;
}
.bigtext{
  width: 100%;
	height: 96rpx;
	color: rgba(255, 255, 255, 1);
	font-size: 64rpx;
	line-height: 150%;
	text-align: center;
	font-weight: bold;
}
.smalltext{
  width: 100%;
	height: 42rpx;
	color: rgba(186, 231, 255, 1);
	font-size: 28rpx;
	line-height: 150%;
	text-align: center;
}
.line{
  margin-top:38rpx ;
  margin-bottom: 20rpx;
  align-items: center;
  justify-content: center;
}
.time{
  width: 630rpx;
	height: 48rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 32rpx;
	line-height: 150%;
	text-align: left;
	font-weight: bold;
}
.arrow{
  width: 50rpx;
	height: 30rpx;
	font-size: 60rpx;
	color: rgba(153, 153, 153, 1);
}
.frame{
  width: 678rpx;
  height: 84rpx;
  margin-bottom: 16rpx;
}
.name{
  width: 400rpx;
	height: 42rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 28rpx;
	line-height: 150%;
	text-align: left;
	font-weight: bold;
}
.usertime{
  width: 278rpx;
	height: 42rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 28rpx;
	line-height: 150%;
	text-align: right;
}
.track{
  width: 458rpx;
	height: 42rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 24rpx;
	line-height: 150%;
	text-align: left;
}
.phone{
  width: 220rpx;
	height: 42rpx;
	color: rgba(80, 80, 80, 1);
	font-size: 28rpx;
	line-height: 150%;
	text-align: right;
}
.first{
  margin-bottom: 5rpx;
}